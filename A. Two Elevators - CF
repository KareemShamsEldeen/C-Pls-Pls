
#include<iostream>
#include<algorithm>
#include<vector>
#include<cmath>
#include<string>
#include<cctype>
#include<cstring>
#include<map>
#include<unordered_map>
#include<set>
#include<climits>
#include<iomanip>
#include<queue>
#include<stack>
#include <iostream>
using namespace std;

int main()
{
    long long t;
    cin >> t;
    while (t--)
    {
        long long  a, b, c ,dif1;
        //3 2 1=>3/1//////1 2 3=>1/(3-2)+c,3 1 2=>3/(2-1)+2

        cin >> a >> b >> c;
        dif1 = abs(c - b)+c;//
        //dif2 = abs(abs(b - c) - 1);//2-5=3=====3-1=2
        if (a < dif1)
        {
            cout << 1 << endl;
        }
        else if (a >  dif1)
        {
            cout << 2 << endl;
        }
        else if (a==dif1)
        {
            cout << 3 << endl;
        }
    }

}
